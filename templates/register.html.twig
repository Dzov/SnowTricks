{% extends('base.html.twig') %}

    {% block main %}
        <main>
            <section class="login__section d-flex flex-column align-items-center justify-content-center">
                <h3 class="mb-5">S'inscrire</h3>
                {{ form_start(form, {'attr': {'class': 'forms login__form d-flex flex-column'}}) }}
                <div class="form-group">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="form-group">
                    {% if form_errors(form.email) is not empty %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(form.email) }}
                        </div>
                    {% endif %}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password) }}
                </div>
                <button type="submit" class="btn btn-primary">Valider</button>
                {{ form_end(form) }}
            </section>
        </main>
    {% endblock %}
