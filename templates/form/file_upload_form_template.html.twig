{% block file_widget %}
    <input type="file" hidden id="{{ form.vars.id }}" class="imageInput" name="{{ form.vars.full_name }}" onchange="previewImage(this)">
    <script>
        let imageSource = {{ asset('uploads/images/file_upload.png') | json_encode | raw }};
    </script>
{% endblock file_widget %}


{% block url_widget %}
    <input type="url" id="{{ form.vars.id }}" name="{{ form.vars.full_name }}" value="{{ form.vars.data }}" class="form-control mt-2">
{% endblock url_widget %}
