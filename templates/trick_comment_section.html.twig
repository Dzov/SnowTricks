<section class="comments__section">
    <h5>Commentaires</h5>

    <div class="trick__comment--form">

    </div>
    {% if trick.comments is empty %}
        <p>Pas de commentaire pour le moment !</p>
    {% else %}
        <div class="trick__comments--list my-3 mx-3">
            {% for comment in trick.comments | reverse %}
                <div class="d-flex align-content-between">
                    {% if comment.user.avatar is not empty %}
                        <img src="/img{{ asset( comment.user.avatar ) }}" class="trick__comments--img align-self-center mr-2">
                    {% else %}
                        <img src="/img/avatarDummy.jpg" class="trick__comments--img align-self-center mr-2">
                    {% endif %}
                    <div class="card-body trick__comments--comment mb-2 px-3 py-2">
                        <small class="text-muted">
                            {{ comment.user.firstName }} {{ comment.user.lastName }} a commenté le {{ comment.postedAt | date("d/m/Y \à H:i") }}
                        </small>
                        <p class="trick__comments--content my-2 mx-2 px-1">
                            {{ comment.content }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</section>
