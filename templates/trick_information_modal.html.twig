<div class="modal fade " id="{{ trick.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                {% for image in trick.images | slice(0,1) %}
                    <img src="{{ asset(image.path) }}" alt="Image de la figure {{ trick.name }}" width="100%" height="300">
                {% endfor %}
            </div>
            <div class="modal-body">
                <div class="trick__slider--container">
                    <div class="trick__slider--images d-flex align-items-center">
                        {% for image in trick.images %}
                            <div class='d-flex flex-column align-items-center'>
                                <div>
                                    <img src="{{ asset(image.path) }}" alt="Image de la figure {{ trick.name }}" width="105" height="105" class="card">
                                </div>
                                <div class="controls">
                                    <a href="{{ path( 'edit_trick', {'trick': trick.id} ) }}"><i class="fa fa-pencil mr-2"></i></a>
                                    <a href=""><i class="fa fa-trash"></i></a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="trick__information--container d-flex flex-column">
                    <p class="mx-4 my-3 text-justify">{{ trick.description }}</p>
                    <ul class=" d-flex justify-content-around">
                        <li>
                            <small class="text-muted">Groupe: {{ trick.category.name }}</small>
                        </li>
                        <li>
                            <small class="text-muted">Créé le {{ trick.createdAt | date("d/m/Y") }}</small>
                        </li>
                        <li>
                            <small class="text-muted">Modifié le {{ trick.updatedAt | date("d/m/Y") }}</small>
                        </li>
                    </ul>
                </div>

                <hr>
                {% include('trick_comment_section.html.twig') %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
