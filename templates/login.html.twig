            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password) }}
        </div>
        <div class="form-group text-center">
            <label class="form-check-label"><a href="{{ path('forgot_password') }}">Mot de passe oubli√© ?</a></label>
        </div>
